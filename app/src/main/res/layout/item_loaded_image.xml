<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_loaded_photo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="@dimen/spacing_small_8"
        android:src="@drawable/ic_no_photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ib_delete_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:elevation="4dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toTopOf="@id/iv_loaded_photo"
        app:layout_constraintEnd_toEndOf="@id/iv_loaded_photo"
        app:layout_constraintStart_toEndOf="@id/iv_loaded_photo"
        app:layout_constraintTop_toTopOf="@id/iv_loaded_photo" />
</androidx.constraintlayout.widget.ConstraintLayout>