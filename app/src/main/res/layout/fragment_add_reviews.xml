<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_add_review"
    tools:context=".presentation.service.AddReviewsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_normal_16"
            android:background="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_add_reviews_page_title"
            style="@style/PageTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:text="@string/add_reviews_page_title"
            app:layout_constraintBottom_toBottomOf="@id/btn_back"
            app:layout_constraintStart_toEndOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="@id/btn_back" />

        <TextView
            android:id="@+id/tv_recommended_switch_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Рекомендую услугу"
            android:layout_marginTop="@dimen/spacing_large_24"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:textSize="@dimen/font_medium_22"
            app:layout_constraintTop_toBottomOf="@id/tv_add_reviews_page_title"
            app:layout_constraintStart_toStartOf="parent"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/switch_recommended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/tv_recommended_switch_label"
            app:layout_constraintBottom_toBottomOf="@id/tv_recommended_switch_label"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/spacing_normal_16"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_price"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_large_24"
            android:hint="@string/price"
            android:labelFor="@id/et_price"
            app:layout_constraintTop_toBottomOf="@id/tv_recommended_switch_label">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:cursorVisible="false"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_description"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_large_24"
            android:hint="@string/description"
            app:layout_constraintTop_toBottomOf="@id/til_price">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="top|start"
                android:inputType="textMultiLine"
                android:minHeight="160dp" />
        </com.google.android.material.textfield.TextInputLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_loaded_images"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_large_24"
            android:clipToPadding="false"
            app:layout_constraintTop_toBottomOf="@id/til_description"
            tools:itemCount="1"
            tools:listitem="@layout/item_loaded_image" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_gallery"
            style="@style/ButtonWithIcon"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/spacing_normal_16"
            android:layout_marginTop="@dimen/spacing_huge_32"
            android:layout_marginEnd="@dimen/spacing_tiny_4"
            android:layout_marginBottom="@dimen/spacing_large_24"
            android:text="@string/gallery"
            app:icon="@drawable/ic_round_photo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btn_publish"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_loaded_images" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_publish"
            style="@style/ButtonWithIcon"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="@dimen/spacing_tiny_4"
            android:layout_marginTop="@dimen/spacing_huge_32"
            android:layout_marginEnd="@dimen/spacing_normal_16"
            android:layout_marginBottom="@dimen/spacing_large_24"
            android:text="@string/publish"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@id/btn_gallery"
            app:layout_constraintTop_toBottomOf="@+id/rv_loaded_images" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>