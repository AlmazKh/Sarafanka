<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/serviceFragment">


    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.almaz.sarafanka.presentation.contacts.ContactsFragment"
        android:label="@string/contacts_page_title"
        tools:layout="@layout/fragment_contacts" />

    <fragment
        android:id="@+id/eventFragment"
        android:name="com.almaz.sarafanka.presentation.event.EventFragment"
        android:label="@string/event_page_title"
        tools:layout="@layout/fragment_event" />

    <fragment
        android:id="@+id/serviceFragment"
        android:name="com.almaz.sarafanka.presentation.service.ServiceFragment"
        android:label="@string/service_page_title"
        tools:layout="@layout/fragment_service" />

    <fragment
        android:id="@+id/notificationFragment"
        android:name="com.almaz.sarafanka.presentation.notification.NotificationFragment"
        android:label="@string/notification_page_title"
        tools:layout="@layout/fragment_notification" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.almaz.sarafanka.presentation.profile.ProfileFragment"
        android:label="@string/profile_page_title"
        tools:layout="@layout/fragment_profile">

        <action
            android:id="@+id/action_profileFragment_to_serviceDetailsFragment"
            app:destination="@id/serviceDetailsFragment" />
    </fragment>

    <fragment
        android:id="@+id/serviceDetailsFragment"
        android:name="com.almaz.sarafanka.presentation.profile.ServiceDetailsFragment"
        android:label="Service details"
        tools:layout="@layout/fragment_service_details">

        <argument
            android:name="arg_service"
            app:argType="com.almaz.sarafanka.core.model.Service" />
    </fragment>


    <navigation
        android:id="@+id/auth_nav_graph"
        app:startDestination="@id/enterPhoneFragment">
        <fragment
            android:id="@+id/enterPhoneFragment"
            android:name="com.almaz.sarafanka.presentation.auth.EnterPhoneFragment"
            android:label="@string/enter_phone"
            tools:layout="@layout/fragment_enter_phone">

            <action
                android:id="@+id/action_enterPhoneFragment_to_enterCodeFragment"
                app:destination="@id/enterCodeFragment" />
        </fragment>

        <fragment
            android:id="@+id/enterCodeFragment"
            android:name="com.almaz.sarafanka.presentation.auth.VerificationCodeFragment"
            android:label="@string/enter_code"
            tools:layout="@layout/fragment_verification_code">

            <action
                android:id="@+id/action_enterCodeFragment_to_enterNameFragment"
                app:destination="@id/enterNameFragment" />

            <action
                android:id="@+id/action_enterCodeFragment_to_nav_graph"
                app:destination="@+id/nav_graph"
                app:launchSingleTop="true"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true" />
        </fragment>

        <fragment
            android:id="@+id/enterNameFragment"
            android:name="com.almaz.sarafanka.presentation.auth.EnterNameFragment"
            android:label="@string/enter_name"
            tools:layout="@layout/fragment_enter_name">

            <action
                android:id="@+id/action_enterNameFragment_to_enterPhotoFragment"
                app:destination="@id/enterPhotoFragment" />
        </fragment>

        <fragment
            android:id="@+id/enterPhotoFragment"
            android:name="com.almaz.sarafanka.presentation.auth.UploadPhotoFragment"
            android:label="@string/enter_photo"
            tools:layout="@layout/fragment_upload_photo">

            <action
                android:id="@+id/action_enterPhotoFragment_to_nav_graph"
                app:destination="@+id/nav_graph"
                app:launchSingleTop="true"
                app:popUpTo="@id/nav_graph"
                app:popUpToInclusive="true" />
        </fragment>
    </navigation>
</navigation>